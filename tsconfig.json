{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2020",
    "module": "NodeNext", // Use ES Modules
    "moduleResolution": "node16", // Ensures correct file extension in output
    "declaration": true, // Generate .d.ts files
    "declarationDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["ES2020"],
    "sourceMap": true,
    "preserveSymlinks": true, // Preserve symbolic links in import paths
    "importsNotUsedAsValues": "remove", // Avoid type-only imports in output
    "strictNullChecks": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
